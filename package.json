{
	"name": "chromabox",
	"version": "0.0.0-dev",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:e2e": "playwright test --grep-invert @demo",
		"test:e2e:demo": "playwright test --config=playwright.config.demo.ts --grep @demo",
		"test": "npm run test:e2e && npm run test:e2e:demo",
		"electron": "cross-env PUBLIC_ADAPTER=static vite build && electron .",
		"electron:build": "cross-env PUBLIC_ADAPTER=static vite build && electron-builder"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.4.0",
		"@playwright/test": "^1.45.3",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-cloudflare": "^4.8.0",
		"@sveltejs/adapter-static": "^3.0.6",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/eslint": "^9.6.0",
		"autoprefixer": "^10.4.20",
		"colord": "^2.9.3",
		"concurrently": "^9.1.0",
		"cross-env": "^7.0.3",
		"electron": "^33.2.1",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^5.0.0",
		"svelte-awesome-color-picker": "^3.1.4",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.9",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3"
	},
	"main": "./src-electron/main.js",
	"author": {
		"name": "Fernando Maclen",
		"email": "hello@fernando.is",
		"url": "https://fernando.is"
	},
	"release": {
		"branches": [
			"main"
		],
		"plugins": [
			"@semantic-release/commit-analyzer",
			"@semantic-release/release-notes-generator",
			"@semantic-release/github"
		]
	}
}
